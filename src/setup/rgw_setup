import os
import sys
import errno
import traceback

from cortx.utils.log import Log
from cortx.utils.cmd_framework import Cmd
from cortx.utils.conf_store import Conf, MappedConf
from src.setup.rgw import Rgw
from src.setup.error import RgwSetupError
from src.setup.const import service_name

class SetupCmdBase(Cmd):
    """Setup cmd base class."""

    def __init__(self, *args):
        """Initialize super class members."""
        super().__init__(*args)

    def add_args(parser):
        parser.add_argument('--services', default='services', help='services')
        parser.add_argument('--config', default='config_url', help='config')

    def get_cortx_config(self, cortx_config_url: str):
        """Load CORTX GConf."""
        self.cortx_gconf = MappedConf(cortx_config_url)
        return self.cortx_gconf

    def initialize_logging(self, cortx_gconf: MappedConf):
        """Initialize Logging."""
        log_path = cortx_gconf.get('cortx>common>storage>log')
        rgw_log_path = os.path.join(log_path, 'rgw/' + Conf.machine_id)
        if not os.path.exists(rgw_log_path):
            os.makedirs(rgw_log_path)
        Log.init(service_name, rgw_log_path)


class PostInstallCmd(SetupCmdBase):
    """PostInstall Setup Cmd."""

    name = 'post_install'

    def __init__(self, args: dict):
        """Initialize super class members."""
        super().__init__(args)
        self._cortx_gconf = self.get_cortx_config(args.config)

    def process(self):
        self.initialize_logging(self._cortx_gconf)
        Rgw.validate('post_install')
        rc = Rgw.post_install(self._cortx_gconf)
        return rc


class PrepareCmd(SetupCmdBase):
    """Prepare Setup Cmd."""
    name = 'prepare'

    def __init__(self, args: dict):
        """Initialize super class members."""
        super().__init__(args)
        self._cortx_gconf = self.get_cortx_config(args.config)

    def process(self):
        self.initialize_logging(self._cortx_gconf)
