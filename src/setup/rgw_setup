class TestCmd(SetupCmdBase):
    """Test Setup Cmd."""
    name = 'test'

    def __init__(self, args):
        """Initialize super class members."""
        super().__init__(args)
        self._cortx_gconf = self.get_cortx_config(args.config)
        # Default test_plan is 'sanity'
        self.test_plan = args.plan

    def process(self):
        self.initialize_logging(self._cortx_gconf)
        Rgw.validate('test')
        rc = Rgw.test(self._cortx_gconf, self.test_plan)
        return rc


